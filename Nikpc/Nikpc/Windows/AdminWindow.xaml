<Window x:Class="Nikpc.Windows.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin felület" Height="300" Width="300"
        Background="#FFB2D3CD">
    <Grid>
        <Button x:Name="modifyUsersButton" Content="Felhasználók kezelése" HorizontalAlignment="Center" Height="40" Margin="0,75,0,0" VerticalAlignment="Top" Width="150" Click="modifyUsersButton_Click"/>
        <Button x:Name="modifyProductsButton" Content="Termékek módosítása" HorizontalAlignment="Center" Height="40" Margin="0,120,0,0" VerticalAlignment="Top" Width="150" Click="modifyProductsButton_Click"/>
        <Button x:Name="productListButton" Content="Terméklista" HorizontalAlignment="Center" Height="40" Margin="0,165,0,0" VerticalAlignment="Top" Width="150" Click="productListButton_Click"/>

    </Grid>
</Window>