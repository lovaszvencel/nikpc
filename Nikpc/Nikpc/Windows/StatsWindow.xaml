        <Label x:Name="label2" Content="Összes vásárlás értéke" HorizontalAlignment="Left" Margin="10,157,0,0" VerticalAlignment="Top"/>
        <Label x:Name="sumPrice" Content="" HorizontalAlignment="Left" Margin="183,157,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.57,0.526" FontStyle="Italic"/>
